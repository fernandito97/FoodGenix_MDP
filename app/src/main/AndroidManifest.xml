<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.genix.foodgenix">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />
        <activity android:name=".RestaurantActivity" />
        <activity android:name=".MapActivity" />
        <activity android:name=".VerificationActivity" />
        <activity android:name=".client.Register.RegisterActivity" />
        <activity
            android:name=".restaurant.Register.RegisterActivity"
            android:label="@string/title_activity_register"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".restaurant.MenuListActivity"
            android:label="@string/title_activity_menu_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".client.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>