<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_list_makanan"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/button_background"
        android:foregroundTint="@color/common_google_signin_btn_text_dark_default"
        android:tint="@color/common_google_signin_btn_text_dark_default"
        app:srcCompat="@drawable/ic_local_dining_black_24dp" />

    <TextView
        android:text="Nama Makanan"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:paddingLeft="20dp"
        android:layout_marginTop="5dp"
        android:id="@+id/txtNamaMakanan"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold|italic"
        android:layout_marginLeft="100dp"
        android:textSize="20dp"
        android:textColor="@android:color/black"/>

    <TextView
        android:text="Description Makanan"
        android:layout_width="fill_parent"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="normal|italic"
        android:layout_height="40dp"
        android:paddingLeft="20dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="5dp"
        android:id="@+id/txtDeskripsi"
        android:textSize="15dp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/txtNamaMakanan" />

    <TextView
        android:text="Harga Makanan"
        android:layout_width="fill_parent"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="normal|italic"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="20dp"
        android:layout_marginLeft="100dp"
        android:id="@+id/txtHarga"
        android:textSize="15dp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/txtDeskripsi" />

</RelativeLayout>
