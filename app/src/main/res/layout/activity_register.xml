<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register_client"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:weightSum="1">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/RegisterButton"
            style="@style/RestaurantButton"
            android:layout_width="260dp"
            android:layout_height="99dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="350dp"
            android:background="@drawable/common_google_signin_btn_text_light_normal_background"
            android:text="Let`s Start"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <Button
            android:id="@+id/RegisterAsliClient"
            style="@style/RestaurantButton"
            android:layout_width="262dp"
            android:layout_height="51dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="350dp"
            android:background="@drawable/common_google_signin_btn_text_light_normal_background"
            android:text="Register Client"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:visibility="invisible" />

        <Button
            android:id="@+id/RegisterAsliRestaurant"
            style="@style/RestaurantButton"
            android:layout_width="262dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="400dp"
            android:background="@drawable/common_google_signin_btn_text_light_normal_background"
            android:text="Register Restaurant"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:visibility="invisible" />

        <Button
            android:id="@+id/LoginAsli"
            style="@style/RestaurantButton"
            android:layout_width="262dp"
            android:layout_height="51dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="450dp"
            android:background="@drawable/common_google_signin_btn_text_light_normal_background"
            android:text="Login"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:visibility="invisible" />

        <Button
            android:id="@+id/RegisterData"
            style="@style/RestaurantButton"
            android:layout_width="262dp"
            android:layout_height="51dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="530dp"
            android:background="@drawable/common_google_signin_btn_text_light_normal_background"
            android:text="Register"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:visibility="invisible" />

        <fragment
            android:id="@+id/fragment"
            android:name="com.genix.foodgenix.client.Register.NamaFragment"
            android:layout_width="match_parent"
            android:layout_height="182dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="340dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="@drawable/home" />

    </FrameLayout>

</LinearLayout>
