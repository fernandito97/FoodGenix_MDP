<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_change_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroudnstandard"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.genix.foodgenix.UserActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        app:srcCompat="@android:color/darker_gray" />

    <TextView
        android:id="@+id/txtNamaUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="33dp"
        android:text="Effendy Hadi Sutanto"
        android:textSize="24sp"
        android:textStyle="normal|bold|italic" />

    <EditText
        android:id="@+id/edEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtNamaUser"
        android:layout_below="@+id/txtNamaUser"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edEmail"
        android:layout_below="@+id/edEmail"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:inputType="phone" />

    <EditText
        android:id="@+id/edDOB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edPhone"
        android:layout_below="@+id/edPhone"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:inputType="date" />

    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edPhone"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignTop="@+id/edEmail"
        android:paddingTop="5dp"
        android:text="Email"
        android:textAlignment="viewStart"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txtPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edDOB"
        android:layout_alignEnd="@+id/txtEmail"
        android:layout_alignStart="@+id/txtEmail"
        android:layout_alignTop="@+id/edPhone"
        android:paddingTop="5dp"
        android:text="Phone"
        android:textAlignment="viewStart"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txtDOB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtGenderGJ"
        android:layout_alignStart="@+id/txtPhoneNumber"
        android:layout_alignTop="@+id/edDOB"
        android:paddingTop="5dp"
        android:text="Date of Birth"
        android:textAlignment="center"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/txtGenderGJ"
        android:layout_marginBottom="11dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorPrimary"
        android:text="Save Change"
        android:textColor="@color/common_google_signin_btn_text_dark_default" />

    <TextView
        android:id="@+id/txtGenderGJ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtDOB"
        android:layout_below="@+id/edDOB"
        android:layout_marginTop="26dp"
        android:paddingTop="5dp"
        android:text="Gender"
        android:textAlignment="viewStart"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txtGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtGenderGJ"
        android:layout_alignStart="@+id/edDOB"
        android:layout_alignTop="@+id/txtGenderGJ"
        android:paddingTop="5dp"
        android:text="Female"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/btnChangePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnChange"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/btnChange"
        android:background="@color/colorPrimary"
        android:text="Change Password"
        android:textColor="@color/common_google_signin_btn_text_dark_default" />

    <Button
        android:id="@+id/btnChangePicture"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_above="@+id/edEmail"
        android:layout_alignStart="@+id/txtNamaUser"
        android:background="@color/colorPrimary"
        android:text="Change Picture"
        android:textAllCaps="false"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="10sp"
        android:textStyle="normal|bold" />

</RelativeLayout>
